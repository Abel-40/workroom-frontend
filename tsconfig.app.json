{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,  // Required for project references
    "outDir": "./dist", // Ensure emit is not disabled
    "noEmit": false     // Explicitly enable emitting
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}